{% schema %}
{
  "name": "Custom Grid Section",
  "settings": [
    {
      "type": "range",
      "id": "gap",
      "label": "Grid Gap (px)",
      "min": 0,
      "max": 40,
      "step": 2,
      "default": 16
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "alt", "label": "Alt text" },
        {
          "type": "select",
          "id": "width",
          "label": "Column Width",
          "default": "1/3",
          "options": [
            { "value": "1/1", "label": "Full width" },
            { "value": "1/2", "label": "1/2" },
            { "value": "1/3", "label": "1/3" },
            { "value": "2/3", "label": "2/3" },
            { "value": "1/4", "label": "1/4" },
            { "value": "3/4", "label": "3/4" }
          ]
        }
      ]
    },
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        { "type": "richtext", "id": "content", "label": "Text" },
        {
          "type": "select",
          "id": "width",
          "label": "Column Width",
          "default": "1/2",
          "options": [
            { "value": "1/1", "label": "Full width" },
            { "value": "1/2", "label": "1/2" },
            { "value": "1/3", "label": "1/3" },
            { "value": "2/3", "label": "2/3" },
            { "value": "1/4", "label": "1/4" },
            { "value": "3/4", "label": "3/4" }
          ]
        }
      ]
    },
    {
      "type": "video",
      "name": "Video Block",
      "settings": [
        { "type": "url", "id": "video_url", "label": "Video URL (YouTube or Vimeo)" },
        {
          "type": "select",
          "id": "width",
          "label": "Column Width",
          "default": "1/2",
          "options": [
            { "value": "1/1", "label": "Full width" },
            { "value": "1/2", "label": "1/2" },
            { "value": "1/3", "label": "1/3" },
            { "value": "2/3", "label": "2/3" },
            { "value": "1/4", "label": "1/4" },
            { "value": "3/4", "label": "3/4" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-grid" style="gap: {{ section.settings.gap }}px;">
  {% for block in section.blocks %}
    <div class="grid-item grid-{{ block.settings.width }}">
      {% case block.type %}
        {% when 'image' %}
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 800 }}" 
                 alt="{{ block.settings.alt | escape }}" loading="lazy" />
          {% endif %}
        {% when 'text' %}
          <div class="grid-text">
            {{ block.settings.content }}
          </div>
        {% when 'video' %}
          {% if block.settings.video_url contains "youtube" %}
            <iframe width="100%" height="315" src="{{ block.settings.video_url | replace: 'watch?v=', 'embed/' }}" frameborder="0" allowfullscreen></iframe>
          {% elsif block.settings.video_url contains "vimeo" %}
            <iframe src="{{ block.settings.video_url | replace: 'vimeo.com', 'player.vimeo.com/video' }}" width="100%" height="315" frameborder="0" allowfullscreen></iframe>
          {% endif %}
      {% endcase %}
    </div>
  {% endfor %}
</div>

<style>
.custom-grid {
  display: flex;
  flex-wrap: wrap;
}

.custom-grid .grid-item {
  padding: 10px;
  box-sizing: border-box;
}

/* Width options */
.grid-1\/1 { flex: 0 0 100%; max-width: 100%; }
.grid-1\/2 { flex: 0 0 50%; max-width: 50%; }
.grid-1\/3 { flex: 0 0 33.333%; max-width: 33.333%; }
.grid-2\/3 { flex: 0 0 66.666%; max-width: 66.666%; }
.grid-1\/4 { flex: 0 0 25%; max-width: 25%; }
.grid-3\/4 { flex: 0 0 75%; max-width: 75%; }

@media(max-width: 768px) {
  .custom-grid .grid-item {
    flex: 0 0 50%;
    max-width: 50%;
  }
}

@media(max-width: 480px) {
  .custom-grid .grid-item {
    flex: 0 0 100%;
    max-width: 100%;
  }
}
</style>
