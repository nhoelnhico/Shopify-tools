      .gallery-slide-{{ section.id }} {
        aspect-ratio: 9.6/13;
      }
    }
    
  </style>
{% elsif slide_ratio == "landscape" %}
  <style>
    @media(min-width: 1024px) {
      .gallery-slide-{{ section.id }} {
        aspect-ratio: 12/8;
      }
    }  
  </style>
{% elsif slide_ratio == "square" %}
  <style>
    @media(min-width: 1024px) {
      .gallery-slide-{{ section.id }} {
        aspect-ratio: 12/12;
      }
    }    
  </style>
{% else %}
  <style>
     @media(min-width: 1024px) {
