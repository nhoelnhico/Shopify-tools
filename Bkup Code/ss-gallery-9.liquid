  <style>
    .gallery-text-{{ section.id }} {
      text-shadow: #121212A1 2px 2px 24px;
    }

    .gallery-title-{{ section.id }} {
       text-shadow: #121212A1 2px 2px 24px;
    }
  </style>
{% endif %}

{% if arrow_hover_effect == "color" %}
  <style>
    .gallery-btn-prev-{{ section.id }}:hover,
    .gallery-btn-next-{{ section.id }}:hover {
      transition: all 0.3s ease 0s;
      border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
      background: {{ arrow_bg_hover_color }};
    }
  
    .gallery-btn-prev-{{ section.id }}:hover .animate-icon,
    .gallery-btn-next-{{ section.id }}:hover .animate-icon {
      color: {{ arrow_hover_color }};
    }
  </style>
{% elsif arrow_hover_effect == "scale" %}
  <style>
    .gallery-btn-prev-{{ section.id }}:hover,
    .gallery-btn-next-{{ section.id }}:hover {
      transform: scale(0.9);
    }

    @media(min-width: 1024px) {
      .gallery-btn-prev-{{ section.id }}:hover,
      .gallery-btn-next-{{ section.id }}:hover {
        transform: scale(0.9);
      }
    }
  </style>
{% elsif arrow_hover_effect == "arrow" %}
  <style>
    .gallery-btn-next-{{ section.id }}:hover .animate-icon:before {
      transform: translate(calc(1 * 0.125rem)) rotate(calc(1 * 45deg));
    }
  
    .gallery-btn-prev-{{ section.id }}:hover .animate-icon:before {
      transform: translate(calc(-1 * 0.125rem)) rotate(calc(1 * 45deg));
    }
    
    .gallery-btn-prev-{{ section.id }}:hover .animate-icon:after,
    .gallery-btn-next-{{ section.id }}:hover .animate-icon:after {
      opacity: 1;
      transform: scaleX(1);
    }
  </style>
{% endif %}

{% if arrow_show_mobile %}
  <style>
    .gallery-btn-prev-{{ section.id }},
    .gallery-btn-next-{{ section.id }} {
      display: flex;
    }
  </style>
{% else %}
  <style>
    .gallery-btn-prev-{{ section.id }},
    .gallery-btn-next-{{ section.id }}  {
      display: none;
    }
  </style>
{% endif %}

{% if arrow_show_desktop %}
  <style>
    @media(min-width: 1024px) {
      .gallery-btn-prev-{{ section.id }},
      .gallery-btn-next-{{ section.id }}  {
