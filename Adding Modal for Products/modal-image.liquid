<style>
  .imgmodal-trigger {
    font: inherit;
    cursor: pointer;
    text-decoration: underline;
  }

  .imgmodal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,.7);
    visibility: hidden;
    opacity: 0;
    transition: opacity .25s;
    z-index: 9999;

    /* Centering with flexbox */
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .imgmodal-overlay:target {
    visibility: visible;
    opacity: 1;
  }

  .imgmodal-popup {
    background: #fff;
    width: 92%;
    max-width: 720px;
    border-radius: 12px;
    padding: 12px;
    box-shadow: 0 12px 40px rgba(0,0,0,.35);
    transition: all 0.3s ease-in-out;
    position: relative;
  }

  .imgmodal-popup img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
  }

  .imgmodal-close {
    position: absolute;
    top: 8px;
    right: 12px;
    font-size: 28px;
    line-height: 1;
    color: #111;
    text-decoration: none;
    cursor: pointer;
  }
  .imgmodal-close:hover {
    color: #d9d2c9;
  }

  /* Background close link */
  .imgmodal-bgclose {
    position: absolute;
    inset: 0;
    content: "";
    display: none;
  }
  .imgmodal-overlay:target .imgmodal-bgclose {
    display: block;
  }

  @media (max-width: 700px) {
    .imgmodal-popup { padding: 10px; }
    .imgmodal-close { top: 6px; right: 10px; }
  }
</style>



<div id="sizepopup" class="overlay">
  <div class="popup">
    <img src="{{ sizechartImg | image_url }}" width="100%" height="100%">
    <a class="close" href="#">X</a>
    
  </div>
</div>